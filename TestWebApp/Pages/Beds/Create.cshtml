            </div>
            <div class="form-group">
                <label asp-for="Bed.Nurse" class="control-label"></label>
                <input asp-for="Bed.Nurse" class="form-control" />
                <span asp-validation-for="Bed.Nurse" class="text-danger"></span>
            </div>
